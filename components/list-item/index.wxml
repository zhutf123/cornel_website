<view class="list-item g-flexbox" bindtap="onClick">
    <view class="pic">
        <image
            class="pic-bg"
            src="{{item.mainImage}}"
            mode="cover"
        />
    </view>
    <view class="flex info">
        <view class="info-tit g-flexbox">
            <text class="flex info-tit-txt">{{item.title}}</text>
            <view class="more-wrap g-flexbox">
                <image class="info-more"
                    src="/assets/images/more.png"
                    catchtap="changeFollow"
                />
            </view>
        </view>
        <view class="tags">
            <!-- <view class="tag tag-r">
                <text class="tag-txt">热播top2</text>
            </view>
            <view class="tag">
                <text class="tag-txt">情感</text>
            </view> -->
        </view>
        <view class="desc">
            <text class="desc-txt">{{item.desc}}</text>
        </view>
    </view>
</view>