@import '/assets/styles/list-item.wxss';

.m-list {
    padding: 12px 0;
    font-size: 0;
    align-items: flex-start;
    background-color: #f2f2f2;
}
.col {
    width: 50%;
}
.col.left {
    padding-left: 12px;
    padding-right: 2px;
}
.col.right {
    padding-left: 3px;
    padding-right: 12px;
}

.list-item {
    overflow: hidden;
    border-radius: 6px;
}
.list-item .pic {
    border-radius: 6px 6px 0 0;
    position: relative;
    width: 100%;
    height: 237px;
}
.list-item .pic-bg {
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.list-item .pic-like {
    position: absolute;
    z-index: 1;
    top: 7px;
    left: 7px;
    width: 14px;
    height: 13px;
}
.list-item .info {
    background-color: #fff;
    padding: 0 8px 12px;
}
.list-item .info-tit {
    font-size: 14px;
    color: #212121;
    line-height: 17px;
}
.list-item .info-desc {
    margin-top: 2px;
    font-size: 11px;
    color: #8c8c8c;
}