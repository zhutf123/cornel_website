    </select>

    <select id="getUserFollowVideoByVid" resultMap="userFollowVideoLogResultMap">
        select
        <include refid="follow_main_column"/>
        from user_follow_video
        where status=1
        and user_id=#{userId}
        and video_id=#{vid}
