    <sql id="query_list_column">
        t.id,
        t.main_image,
        t.main_source,
        t.channel,
        t.title,
        t.depict,
        t.nums,
        t.vip,
        t.status,
        t.operate_time,
        t.operator_name,
        t.operator,
        t.recommend,
        t.top,
        t.ext_info,
        t.create_time,
        coalesce(fd.all_follow_num,0) as follow_num,
        coalesce(fd.all_play_num,0) as play_num,
