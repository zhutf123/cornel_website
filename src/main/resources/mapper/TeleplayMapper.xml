            <if test="vip != null">
                vip = #{vip},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="operateTime != null">
                operate_time = #{operateTime},
            </if>
            <if test="operator != null">
                operator = #{operator},
            </if>
            <if test="operatorName != null">
                operator_name = #{operatorName},
            </if>
            <if test="recommend != null">
                recommend = #{recommend},
            </if>
            <if test="top != null">
