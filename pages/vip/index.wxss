.vip-bg {
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
    width: 100%;
}

.info {
    position: relative;
    padding: 22px 15px;
}
.info::before {
    content: '';
    position: absolute;
    top: 0;
    left: 13px;
    right: 13px;
    border-top: 1px solid #f2f2f2;
}
.user-info {
    padding-left: 10px;
    align-items: flex-start;
    font-size: 12px;
    color: #fff;
}
.avatar {
    width: 48px;
    height: 46px;
}
.name {
    font-size: 16px;
}
.vip-tag {
    margin-left: 2px;
    width: 32px;
    height: 16px;
}
.login-btn {
    padding: 5px 18px;
    background-color: #fff;
    border-radius: 20px;
    font-size: 12px;
    color: #754808;
}

.vip-choose {
    margin-top: 20px;
}

.title {
    margin-top: 6px;
    padding: 15px 12px;
}
.title-ico {
    width: 26rpx;
    height: 24rpx;
}
.title-txt {
    font-size: 32rpx;
    font-weight: 500;
}

.watched-list {
    padding-left: 10px;
}

.vip-private {
    padding: 0 7px;
}
.private-item {
    width: 25%;
    padding: 0 5px;
}
.private-pic {
    width: 100%;
}


.vip-help {
    justify-content: space-around;
}
.help-item {
    text-align: center;
}
.help-pic {
    width: 48px;
    height: 48px;
}
.help-txt {
    margin-top: 4px;
    font-size: 14px;
    color: #2e2e2e;
}

.fill {
    height: 44px;
}