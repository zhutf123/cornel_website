.tabs {
    width: 100%;
    box-sizing: border-box;
}
.tab-item {
    position: relative;
}
.tab-active {
    font-weight: 500;
}
.tab-cont {
    left: 0;
    right: 0;
    top: 0;
}


.search {
    height: 33px;
    padding-left: 10px;
    line-height: 33px;
    background-color: #f2f2f2;
}
.search-ico {
    width: 14px;
    height: 14px;
    margin-right: 5px;
}

.banner-item {
    position: relative;
    width: 100%;
    height: 766rpx;
    overflow: hidden;
}
.banner-bg {
    width: 100%;
    height: auto;
}
.banner-mask {
    position: absolute;
    z-index: 1;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 155px;
    height: 155px;
    background-image: linear-gradient(180deg, rgba(0,0,0,0.00) 19%, rgba(0,0,0,0.71) 69%);
}
.banner-tit {
    position: absolute;
    z-index: 2;
    left: 13px;
    bottom: 11px;
    padding: 10px;
    background: rgba(52,52,52,0.75);
    border-radius: 9px;
}
.banner-pic {
    position: relative;
    width: 56px;
    height: 100%;
}
.banner-pic image {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 56px;
}
.banner-cont {
    line-height: 17px;
    font-size: 12px;
    color: #fff;
}
.banner-cont .tit {
    line-height: 28px;
    font-size: 20px;
    font-weight: 500;
}
.banner-btn {
    width: 53px;
    height: 26px;
}


.m1 {
    padding: 20px 7px 0 12px;
}
.m1-item {
    width: 25%;
    height: 108rpx;
    padding-right: 5px;
    border-radius: 4px;
    overflow: hidden;
}
.m1-pic {
    width: 100%;
    height: 100%;
    border-radius: 4px;
    object-fit: cover;
}

.m2 {
    padding-top: 19px;
    padding-left: 12px;
}
.m2-tit {
    margin-bottom: 15px;
    line-height: 22px;
    font-size: 16px;
    font-weight: 500;
}
.m2-more {
    padding-right: 12px;
    font-size: 11px;
    color: #8c8c8c;
}
.m2-arrow {
    position: relative;
    top: 1px;
    width: 6px;
    height: 10px;
}

.m4 {
    padding-left: 0;
    background-color: #f2f2f2;
}
.m4 .m2-tit {
    margin-bottom: 3px;
    padding-left: 12px;
}